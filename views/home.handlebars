<div class="home row">
    {{> header}}

    <div class="col-11 col-md-8 main">
        <div class="timeline">
            <h3>Accueil</h3>
            <hr class="my-4">
            <form class="form-tweet" action="/tweet" method="POST">
                <div class="form-group">
                    <textarea cols="0" rows="5" name="content" class="form-control textarea"
                        placeholder="Quoi de neuf ?" autofocus></textarea>
                </div>
                <button class="button btn btn-lg btn-primary primary btn-block text-uppercase"
                    type="submit">Tweet</button>
            </form>
            <div class="separador"></div>
            <div class="tweets">
                {{> ajax/tweets}}
            </div>
        </div>
    </div>
    {{> tendance}}
</div>


<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>





<script src="/public/js/index.js"></script>