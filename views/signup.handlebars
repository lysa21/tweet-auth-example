<div class="row" id="usernameContainer">
	<div class="col-12 col-md-offset-4 welcomeText text-center">
		<h1>Signup</h1>
		<h3>{{message}}</h3>
	</div>

<form  class='col-12' method="post" action="/signup">
	<div class="row form-group">
		<div class="col authInputs">
			<input class="form-control" id="username" name="username" placeholder="Username" />
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col authInputs">
			<input class="form-control" id="password" type="password" name="password" placeholder="Password" />
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<button class="btn btn-primary pull-right" type="submit" id="submitUser">Submit</button>
		</div>
		<div class="col-md-4 col-md-offset-6">
			<a href="/" class="btn btn-default pull-right" type="submit" id="submitUser">Signin</a>
		</div>
	</div>
</form>
</div>
<br>